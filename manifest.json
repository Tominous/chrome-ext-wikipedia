{
  "name": "Wikipedia Plus",
  "version": "0.1.0",
  "manifest_version": 2,

  "author": "Falcon Dai",
  "description": "Utilities to improve the user experience of Wikipedia.org for avid users.",
  "icons": { 
    "128": "/assets/image/icon.png"
  },

  "permissions": [
    "storage"
  ],

  "options_page": "options.html",
  "content_scripts": [
    {
      "matches": ["*://*.wikipedia.org/*"],
      "js": ["vendor/jquery.js", "content.js"],
      "css": ["style.css"]
    }
  ]
}